			/*background-color: white;*/
			background-position: center center;
			background-repeat: no-repeat;
			background-attachment: fixed;
			-webkit-background-size: cover;
			background-size: cover;
			-webkit-filter: blur(0px);
			-moz-filter: blur(0px);
			filter: blur(0px);
		}
		.login-form {
			position: absolute;
			top: 64%;
			left: 75%;
			transform: translate(-50%, -50%);
			width: 800px;
			height: 800px;
			padding: 100px 60px;
			/*background: rgba(0, 0, 0, 0.5);*/
		}
		.login-form h4 {
			/*margin-top: 100%;*/
			margin-top: 5%;
			margin: 0;
			padding: 0 0 30px;
			color: #191970;
			text-align: center;
			text-transform: uppercase;
			font-size: 35px;
			font-family: 'Times New Roman', serif;

		}
		.login-form p {
			margin: 0;
			padding: 0;
			font-weight: bold;
			color: #fff;
		}
		/*.login-form input {
			width: 100%;
			margin-bottom: 20px;
		}*/
		.login-form select {
			border: none;
			border-bottom: 1px solid #fff;
			background: transparent;
			outline: none;
			height: 40px;
			color: black;
			font-size: 16px;
			/*width: 100%;
			margin-bottom: 20px;*/
		}
		.login-form input {
			border: none;
			border-bottom: 1px solid #fff;
			background: transparent;
			outline: none;
			height: 40px;
			color: white;
			font-size: 16px;
		}
		/*.placeholder {
			border: none;
			border-bottom: 1px solid #fff;
			background: transparent;
			outline: none;
			height: 40px;
			color: white;
			font-size: 16px;
		}*/
		.login-form input{
			border: none;
			border-bottom: 1px solid black;
			background: transparent;
			outline: none;
			height: 40px;
			color: #fff;
			font-size: 16px;
		}
		.login-form form-group {
			color: lightblue;
		}
		.login-form button[type=submit] {
			width: 100px;
			height: 30px;
			color: #fff;
			font-size: 20px;
			background: darkred;
			cursor: pointer;
			border-radius: 25px;
			border: none;
			outline: none;
			margin-top: 5%;
		}

		/*.login-form a {
			height: 30px;
			color: lightblue;
			font-size: 20px;
			margin-top: 5%;
		}*/
		.divider{
			width: 350px;
			height: auto;
			display: inline-block;
		}

		.image-stack {
			/*object-fit: cover; 
			: 0.8;*/
	  		position: relative;
	  		left: 0%;
	  		top: 20%;
	  		width: 0%;
	  		padding: 0px 0px;
	  	}
	  	.image-stack__item--top{
	  		position: absolute;

	  		width:50%;
	  	}
		/*body{
			margin-top: 0px;
			background-color: #f0f0f0;
		}
		
		.autocenter{
			float: none;
			margin: auto;
		}		
	</style>
</head>
<body>
	<div class="image-stack">
		<div class="image-stack__item image-stack__item--top">
			<img src="https://wp-asset.groww.in/wp-content/uploads/2018/02/18123458/office-620822_1920.jpg" width=750 height=850 style=": background: rgba(0, 0, 0, 0.5);" >
		</div>
	</div> 

	<nav class="navbar navbar-expand-lg navbar-transparent">
		<a class="navbar-brand" style="font-size: 30px; text-align: center; color: white; font-family: 'Times New Roman', serif" href="#">Portion Tracker</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>

		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav ml-auto">
				<li class="nav-item active">
					<a class="nav-link" href="/" style="font-size: 25px; text-align: center; color: black; font-family: 'Times New Roman', serif">Home <span class="sr-only">(current)</span></a>
				</li>
			</ul>
		</div>
	</nav>

	


	<% if(responseMessage=='success'){ %>
		<!-- The Modal -->
		<div class="modal" id="successModal">
		  <div class="modal-dialog">
		    <div class="modal-content">
		      <!-- Modal Header -->
		      <div class="modal-header">
		        <h4 class="modal-title">Success</h4>
		        <button type="button" class="close" data-dismiss="modal">&times;</button>
		      </div>
		      <!-- Modal body -->
		      <div class="modal-body">
		        <h4>Account created successfully.</h4>
		      </div>
		      <!-- Modal footer -->
		      <div class="modal-footer">
		        <button type="button" class="btn btn-danger" onclick="location.assign('/login_cm')">Log In</button>
		      </div>
		    </div>
		  </div>
		</div>
		<script type="text/javascript">
			$("#successModal").modal();
		</script>
	<% }else if(responseMessage=='failed'){ %>
		<div class="modal" id="errorModal">
		  <div class="modal-dialog">
		    <div class="modal-content">
		      <!-- Modal Header -->
		      <div class="modal-header">
		        <h4 style="color: darkred; font-family: 'Times New Roman', serif;" class="modal-title">ERROR</h4>
		        <button type="button" class="close" data-dismiss="modal">&times;</button>
		      </div>
		      <!-- Modal body -->
		      <div class="modal-body">
		        <h4 style="color: black; font-family: 'Times New Roman', serif;">OTP entered is Incorrect</h4>
		      </div>
		      <!-- Modal footer -->
		      <!-- <div class="modal-footer">
		        <button type="button" class="btn btn-danger" onclick="location.assign('/')">OTP</button>
		      </div> -->
		    </div>
		  </div>
		</div>
		<script type="text/javascript">
			$("#errorModal").modal();
		</script>
	<% }  %>

	
	
	
	<div class="login-form">
