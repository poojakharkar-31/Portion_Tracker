<div class="addOrEdit_course-form">
    <h4>Scheduled Lectures</h4>
    <div class="row">
     <!--  <div class="col-md-3"> -->
        <h3><a  class="btn btn-secondary" href="/lectures_kalyan"><i class="fa fa-plus"></i> Add New  </a></h3>
        <table class="table table-striped">
            {{#each list_lecture}}
            <thead class="thead-light">
                <tr>
                    <th><i><i>Student Name :   </i>{{this.Student_name}}</i></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <!-- <td><i><u>{{this.Course_name}}</u></i></td> -->
                    <td><i>Course Name :   </i> {{this.Course_name}}</td>
                </tr>
                <tr>
                    <td><i>Teacher Name :   </i> {{this.Teacher_name}}</td>
                </tr>
                <tr>
                    <td><i>Lecture Date :   </i> {{this.Date}}</td>
                </tr>
                <tr>
                    <td><i>Start Time :   </i> {{this.Start_Time}}</td>
                </tr>
                <tr>
                    <td><i>End Time :   </i> {{this.End_Time}}</td>
                </tr>
                <tr>
                    <td><i>Chapter Name :   </i> {{this.Chapter_name}}</td>
                </tr>
                 <tr>
                    <td><i>Status :   </i> <a1 style="color: #ff9999; font-family: 'Times New Roman', serif; font-size: 20px">{{this.Status}}</a1></td>
                </tr>
                <td>
                    <h5><a class="btn btn-secondary" href="/lectureupdate_kalyan?id={{this._id}}" style= " color: #000000; font-size: 15px;
                    background: lightblue; cursor: pointer; border-radius: 25px; border: none; outline: none;">  Update <i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                    <br>
                    <br>
                    <a class="btn btn-secondary" href="/lectureskalyan/delete/{{this._id}}" style= " color: #fff; font-size: 15px;
                    background: red; cursor: pointer; border-radius: 25px; border: none; outline: none"; onclick="return confirm('Are you sure to delete this record ?');">   Delete  <i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                    <br>
                    <br>
                    <br>
                </td>




                {{/each}}

            </tbody>
        </table>


    </div>


